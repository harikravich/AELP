<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title }}</title>
    {% if ga_measurement_id %}
    <!-- GA4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ ga_measurement_id }}"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);} gtag('js', new Date());
      gtag('config', '{{ ga_measurement_id }}');
    </script>
    {% endif %}
    <style>
      body { font-family: system-ui, sans-serif; margin: 0; line-height: 1.5; }
      header { background: #0b5cff; color: white; padding: 24px; }
      .container { max-width: 960px; margin: 0 auto; padding: 24px; }
      .cta { background: #0b5cff; color: white; padding: 12px 16px; border: 0; border-radius: 6px; cursor: pointer; }
      .faq { margin-top: 24px; }
      .faq h3 { margin-bottom: 4px; }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <h1>{{ headline }}</h1>
        <p>{{ subhead }}</p>
        <button class="cta" onclick="gtag('event','cta_click',{event_category:'engagement',event_label:'primary_cta'})">{{ cta_text }}</button>
      </div>
    </header>
    <main class="container">
      <section>
        <h2>Why {{ brand }}?</h2>
        <ul>
          {% for b in bullets %}
          <li>{{ b }}</li>
          {% endfor %}
        </ul>
      </section>
      {% if faqs %}
      <section class="faq">
        <h2>Frequently Asked Questions</h2>
        {% for f in faqs %}
          <h3>{{ f.q }}</h3>
          <p>{{ f.a }}</p>
        {% endfor %}
      </section>
      {% endif %}
    </main>
  </body>
</html>


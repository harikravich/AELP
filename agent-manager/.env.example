# Environment Configuration for Agent Manager

# Application
ENVIRONMENT=development
APP_NAME=GAELP Agent Manager
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agent_manager
DB_USER=agent_manager
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Kubernetes Configuration
K8S_NAMESPACE=agent-training
K8S_IN_CLUSTER=false
K8S_KUBECONFIG_PATH=~/.kube/config
K8S_JOB_TTL_SECONDS=86400
K8S_MAX_CONCURRENT_JOBS=50
K8S_RESOURCE_BUFFER=0.1

# Resource Management
RESOURCE_DEFAULT_CPU_REQUEST=1
RESOURCE_DEFAULT_MEMORY_REQUEST=2Gi
RESOURCE_DEFAULT_STORAGE_REQUEST=10Gi
RESOURCE_MAX_CPU_PER_JOB=8
RESOURCE_MAX_MEMORY_PER_JOB=32Gi
RESOURCE_MAX_GPU_PER_JOB=4

# Security
SECURITY_JWT_SECRET_KEY=your-secret-key-change-in-production
SECURITY_JWT_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=1440
SECURITY_ALLOWED_ORIGINS=*

# Monitoring
MONITORING_PROMETHEUS_PORT=8080
MONITORING_METRICS_RETENTION_DAYS=30
MONITORING_HEALTH_CHECK_INTERVAL=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Google Cloud (if using GKE)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-project-id
GKE_CLUSTER_NAME=gaelp-cluster
GKE_CLUSTER_ZONE=us-central1-a
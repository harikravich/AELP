# GAELP Safety Framework Environment Configuration
# Copy this file to .env and customize for your environment

# Environment Settings
GAELP_ENVIRONMENT=development  # development, staging, production
GAELP_LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
GAELP_DEBUG=false             # Enable debug mode

# Budget Control Settings
GAELP_DEFAULT_DAILY_BUDGET=1000.0
GAELP_DEFAULT_WEEKLY_BUDGET=5000.0
GAELP_DEFAULT_MONTHLY_BUDGET=20000.0
GAELP_MAX_CAMPAIGN_BUDGET=50000.0
GAELP_AUTO_PAUSE=true

# Content Safety Settings
GAELP_CONTENT_STRICT_MODE=false
GAELP_AGE_THRESHOLD=13

# Performance Safety Settings
GAELP_MIN_REWARD=-10.0
GAELP_MAX_REWARD=10.0
GAELP_ANOMALY_THRESHOLD=3.0

# Agent Behavior Settings
GAELP_MAX_ACTIONS_PER_HOUR=100
GAELP_REPETITION_THRESHOLD=5

# Monitoring Settings
GAELP_HEALTH_CHECK_INTERVAL=30

# Alert Configuration
GAELP_ALERT_WEBHOOKS=https://hooks.slack.com/your-webhook,https://your-alerts.com/webhook
GAELP_CRITICAL_EMAILS=admin@yourcompany.com,security@yourcompany.com
GAELP_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Feature Flags
GAELP_ENABLE_BUDGET=true
GAELP_ENABLE_CONTENT=true
GAELP_ENABLE_PERFORMANCE=true
GAELP_ENABLE_OPERATIONAL=true
GAELP_ENABLE_DATA_SAFETY=true
GAELP_ENABLE_BEHAVIOR=true

# Database Configuration (if using persistent storage)
GAELP_DB_URL=postgresql://user:password@localhost:5432/gaelp_safety
GAELP_REDIS_URL=redis://localhost:6379/0

# Cloud Integration
GAELP_GCP_PROJECT_ID=your-gcp-project
GAELP_GCP_CREDENTIALS_PATH=/path/to/service-account.json

# External API Configuration
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-token
FACEBOOK_ADS_ACCESS_TOKEN=your-facebook-token
MICROSOFT_ADS_CUSTOMER_ID=your-microsoft-customer-id

# Security Settings
GAELP_ENCRYPTION_KEY=your-32-character-encryption-key
GAELP_JWT_SECRET=your-jwt-secret-key
GAELP_API_RATE_LIMIT=1000  # requests per hour

# Compliance Settings
GAELP_GDPR_COMPLIANCE=true
GAELP_CCPA_COMPLIANCE=true
GAELP_DATA_RETENTION_DAYS=365
GAELP_AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
{
  "meta": {
    "name": "meta-ads-connector",
    "description": "Meta (Facebook/Instagram) Ads MCP Connector",
    "config": {
      "appId": "YOUR_META_APP_ID",
      "appSecret": "YOUR_META_APP_SECRET",
      "accessToken": "YOUR_LONG_LIVED_ACCESS_TOKEN",
      "accountId": "act_YOUR_AD_ACCOUNT_ID",
      "businessAccountId": "YOUR_BUSINESS_ACCOUNT_ID",
      "rateLimitPerSecond": 10,
      "retryAttempts": 3,
      "timeout": 30000,
      "apiVersion": "v18.0"
    },
    "spendingLimits": {
      "dailyLimit": 100,
      "monthlyLimit": 3000,
      "campaignLimit": 500,
      "currency": "USD",
      "alertThresholds": {
        "warning": 80,
        "critical": 95
      }
    }
  },
  "google": {
    "name": "google-ads-connector",
